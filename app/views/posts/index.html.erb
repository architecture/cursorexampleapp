<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <% content_for :title, "Posts" %>

  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Posts</h1>
    <%= link_to "New post", new_post_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>

  <div data-controller="infinite-scroll">
    <div id="posts" 
         class="grid gap-6 md:grid-cols-2 lg:grid-cols-3"
         data-infinite-scroll-target="entries">
      <% @posts.each do |post| %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow duration-200">
          <div class="p-6">
            <%= render post %>
            <%= link_to "Read more", post, class: "mt-4 inline-block text-indigo-600 hover:text-indigo-800 font-medium" %>
          </div>
        </div>
      <% end %>
    </div>
    
    <% if @posts.next_page %>
      <div class="flex justify-center my-8" data-infinite-scroll-target="pagination">
        <div class="animate-pulse text-gray-500">
          Loading more posts...
        </div>
      </div>
    <% end %>
  </div>
</div>
